# Application Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Flask Configuration
# ============================================================================
FLASK_ENV=development
FLASK_DEBUG=1

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://planlyze:NewPlanlyzePassword@localhost:5433/planlyze

# ============================================================================
# Security Configuration
# ============================================================================
# Flask secret key (change in production!)
SECRET_KEY=your-super-secret-development-key-change-this

# JWT token secret key (change in production!)
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# JWT token expiration time in seconds (86400 = 24 hours)
JWT_ACCESS_TOKEN_EXPIRES=86400

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3001,http://localhost:5000,http://localhost:3002,http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# External API Services
# ============================================================================
# Anthropic API key for Claude AI integration
ANTHROPIC_API_KEY=your-anthropic-api-key

# ============================================================================
# Application Settings
# ============================================================================
# Items per page for pagination
ITEMS_PER_PAGE=20

# Application port (if using custom port)
PORT=3000

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
# Email provider (smtp, sendgrid, etc.)
EMAIL_PROVIDER=smtp

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Feature Flags
# ============================================================================
# Enable/disable features
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_ANALYTICS=true
